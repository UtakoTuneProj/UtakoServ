[formatters]
    keys = default, progress

[formatter_default]
    class   = loginit.UtakoFormatter
    format  = %(levelname)-8s| %(message)s \n%(name)s, %(lineno)s

[formatter_progress]
    class   = loginit.UtakoFormatter
    format  = %(levelname)-8s| %(message)s

[handlers]
    keys = default, progress, console

[handler_default]
    class       = logging.handlers.RotatingFileHandler
    formatter   = default
    args        = ('logs/utako.log', 'a')
    maxBytes    = 65536
    backupCount = 3

[handler_progress]
    class       = logging.handlers.RotatingFileHandler
    formatter   = progress
    args        = ('logs/utako.log', 'a')
    maxBytes    = 65536
    backupCount = 3

[handler_console]
    class       = logging.StreamHandler
    formatter   = progress
    args        = ()

[loggers]
    keys = root, progress, console

[logger_root]
    level       = WARNING
    handlers    = default

[logger_progress]
    level       = INFO
    handlers    = progress
    qualname    = progress

[logger_console]
    level       = INFO
    handlers    = console
    qualname    = console
